<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/common_dimen_10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
            android:id="@+id/llImg"
            android:gravity="center"
            android:background="@drawable/ic_call_jl_img"
            android:layout_width="45dip"
            android:layout_height="45dip">

            <ImageView
                android:id="@+id/headImgG"
                android:visibility="gone"
                android:src="@drawable/ic_person_white_120dp"
                android:layout_width="45dip"
                android:layout_height="45dip" />

                <ImageView
                    android:id="@+id/headImgZ"
                    android:visibility="gone"
                    android:padding="@dimen/common_dimen_5dp"
                    android:src="@drawable/ic_people_24dp"
                    android:layout_width="45dip"
                    android:layout_height="45dip" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_dimen_10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:text="sadnjkandsakjnkjn"
            android:id="@+id/tvFunNumberName"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/main_tab_text_normal"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFunNumber"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="sadnjkandsakjnkjn"
                android:layout_marginTop="@dimen/common_dimen_5dp"
                android:textColor="@color/main_tab_text_normal"
                android:textSize="@dimen/text_size_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPeerNumber"
                android:visibility="gone"
                android:text="sjsaksakjjksdss"
                android:textStyle="bold"
                android:textColor="@color/main_tab_text_normal"
                android:textSize="@dimen/text_size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgHr"
            android:layout_gravity="center_vertical"
            android:src="@drawable/huru"
            android:layout_width="30dip"
            android:layout_height="30dip" />
    </LinearLayout>
    <View
        style="@style/horizontal_line_style" />
</LinearLayout>

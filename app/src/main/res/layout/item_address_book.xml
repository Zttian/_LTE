<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="@dimen/common_dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llImg"
            android:gravity="center"
            android:background="@drawable/ic_call_dialing"
            android:layout_width="45dip"
            android:layout_height="45dip">

            <ImageView
                android:src="@drawable/ic_person_white_120dp"
                android:layout_width="45dip"
                android:layout_height="45dip" />
        </LinearLayout>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/llImg"
            android:id="@+id/tvStationName"
            android:layout_marginLeft="@dimen/common_dimen_10dp"
            android:textColor="@color/main_tab_text_normal"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tvStationNumber"
            android:layout_marginRight="@dimen/common_dimen_10dp"
            android:textColor="@color/main_tab_text_normal"
            android:textSize="@dimen/text_size_15sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/horizontal_line_style" />
</LinearLayout>
